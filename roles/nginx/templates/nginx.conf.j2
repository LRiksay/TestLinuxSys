user nginx;
worker_process auto;

events {
    worker_connections 1024;
}

http {
    server {
	listen {{ nginx_port }} ssl;
	server_name {{ domain_name }};

	ssl_certificate /etc/nginx/ssl/{{ domain_name }}.crt;
	ssl_certificate_key /etc/nginx/ssl/{{ domain_name }}.key;

	location /{
	    root /usr/share/nginx/html;
	    index index.html;
	}
      }
}
